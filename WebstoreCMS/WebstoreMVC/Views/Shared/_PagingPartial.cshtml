<div>
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li>@Html.ActionLink("<", "Index", new { pageNumber = Model.PageNumber - 1 })</li>
        }
        @if (Model.PageNumber < Model.PageCount)
        {
            <li>@Html.ActionLink(">", "Index", new { pageNumber = Model.PageNumber + 1 })</li>
        }
    </ul>
</div>
